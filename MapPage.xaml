<Page x:Class="eceshowcase.MapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:bing="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
      mc:Ignorable="d"
      Title="MapPage"
      Height="1080"
      Width="1920">
    <Page.Resources>
        <bing:ApplicationIdCredentialsProvider x:Key="Credentials"
                                               ApplicationId="AgLyknzJBYKAb9nHA75q_EYfQRqHsNW79H87o9itaJvE_BYCpHcVfkttCVJuk6nr" />
    </Page.Resources>
    <Grid>
        <bing:Map Mode="Road"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  AnimationLevel="Full"
                  CredentialsProvider="{StaticResource Credentials}">
        </bing:Map>
    </Grid>
</Page>
